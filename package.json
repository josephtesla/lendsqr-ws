{
  "name": "lendsqr-ws",
  "version": "1.0.0",
  "description": "Wallet Service for Demo Credit",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "build": "NODE_ENV=production tsc --project tsconfig.prod.json",
    "start": "NODE_ENV=production node dist/index.js",
    "infra": "docker-compose -f docker-compose.infra.yml up -d",
    "migrate": "npx knex --knexfile ./src/db/knexfile.ts migrate:latest",
    "migrate:up": "npx knex --knexfile ./src/db/knexfile.ts migrate:up",
    "migrate:down": "npx knex --knexfile ./src/db/knexfile.ts migrate:down",
    "migrate:down:all": "npx knex --knexfile ./src/db/knexfile.ts migrate:rollback --all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/josephtesla/lendsqr-ws.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.16",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.6",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "supertest": "^6.2.4",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "mysql": "^2.18.1",
    "validator": "^13.7.0",
    "winston": "^3.8.2"
  }
}
